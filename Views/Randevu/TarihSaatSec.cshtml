@model WebProje.Models.Islem
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "Tarih ve Saat Seçimi";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h2>Tarih ve Saat Seçimi</h2>

<p>Seçilen işlem: <strong>@ViewBag.Islem.Ad</strong></p>
<p>Seçilen personel: <strong>@ViewBag.Personel.Ad @ViewBag.Personel.Soyad</strong></p>

<form method="post" action="@Url.Action("UygunlukKontrol", "Randevu")">
    <input type="hidden" name="islemId" value="@ViewBag.Islem.Id" />
    <input type="hidden" name="personelId" value="@ViewBag.Personel.Id" />

    <div class="form-group">
        <label for="randevuTarihi">Tarih:</label>
        <input type="date" class="form-control" id="randevuTarihi" name="randevuTarihi" required />
    </div>

    <div class="form-group">
        <label for="randevuSaati">Saat:</label>
        <input type="time" class="form-control" id="randevuSaati" name="randevuSaati" required />
    </div>

    <button type="submit" class="btn btn-primary">Uygunluk Kontrolü</button>
</form>
