@model IEnumerable<WebProje.Models.PersonelUzmanlik>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "İşlem Seçimi";
}

<div class="container" style="padding: 20px;">
    <h2 class="text-center" style="margin-bottom: 30px;">İşlem Seçimi</h2>
    <p class="text-center">Lütfen bir işlem seçin:</p>

    <form method="post" action="@Url.Action("PersonelSec", "Randevu")" style="max-width: 800px; margin: 0 auto;">
        @foreach (var uzmanlik in Model)
        {
            <div class="card mb-3">
                <div class="card-header text-center">
                    <strong>@uzmanlik.UzmanlikAdi</strong>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var islem in uzmanlik.Islemler)
                        {
                            <li class="list-group-item">
                                <input type="radio" name="islemId" value="@islem.Id" id="islem-@islem.Id" />
                                <label for="islem-@islem.Id">
                                    @islem.Ad - @islem.Ucret.ToString("C") (Süre: @islem.Sure.TotalMinutes dak.)
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
        <div style="text-align: center; margin-top: 20px;">
            <button type="submit" class="btn btn-primary">Devam Et</button>
        </div>
    </form>
</div>
