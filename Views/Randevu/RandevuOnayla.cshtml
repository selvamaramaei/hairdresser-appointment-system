@model WebProje.Models.Randevu
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    ViewBag.Title = "Randevu Onayla";
}

<h2>Randevu Onayla</h2>

<div>
    <p><strong>Ad:</strong> @ViewBag.User.Ad</p>
    <p><strong>Soyad:</strong> @ViewBag.User.Soyad</p>
    <p><strong>Telefon:</strong> @ViewBag.User.Telefon</p>
    <p><strong>Cinsiyet:</strong> @ViewBag.User.Cinsiyet</p>
    <p><strong>Seçilen İşlem:</strong> @ViewBag.Islem.Ad</p>
    <p><strong>Seçilen Çalışan:</strong> @ViewBag.Personel.Ad @ViewBag.Personel.Soyad</p>
    <p><strong>Tarih:</strong> @ViewBag.RandevuTarihi.ToShortDateString()</p>
    <p><strong>Saat:</strong> @ViewBag.RandevuSaati</p>
</div>

<form asp-action="RandevuOnayla" method="post">
    <input type="hidden" name="islemId" value="@ViewBag.Islem.Id" />
    <input type="hidden" name="personelId" value="@ViewBag.Personel.Id" />
    <input type="hidden" name="randevuTarihi" value="@ViewBag.RandevuTarihi" />
    <input type="hidden" name="randevuSaati" value="@ViewBag.RandevuSaati" />
    <button type="submit" class="btn btn-success">Onayla</button>
    <a asp-action="TarihSaatSec" asp-route-islemId="@ViewBag.Islem.Id" asp-route-personelId="@ViewBag.Personel.Id" class="btn btn-secondary">Geri Dön</a>
</form>
