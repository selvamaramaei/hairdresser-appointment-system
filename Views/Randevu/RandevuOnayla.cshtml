@model WebProje.Models.Randevu

<h2>Randevu Özeti</h2>
<p><strong>Ad:</strong> @Model.User.Ad</p>
<p><strong>Soyad:</strong> @Model.User.Soyad</p>
<p><strong>Telefon:</strong> @Model.User.Telefon</p>
<p><strong>Seçilen İşlem:</strong> @Model.Islem.Ad</p>
<p><strong>Seçilen Çalışan:</strong> @Model.Personel.Ad @Model.Personel.Soyad</p>
<p><strong>Randevu Günü:</strong> @Model.RandevuTarihi.ToShortDateString()</p>
<p><strong>Randevu Saati:</strong> @Model.RandevuSaati</p>

<form method="post" action="@Url.Action("RandevuOnayla", "Randevu")">
    <input type="hidden" name="UserId" value="@Model.User.Id" />
    <input type="hidden" name="IslemId" value="@Model.Islem.Id" />
    <input type="hidden" name="PersonelId" value="@Model.Personel.Id" />
    <input type="hidden" name="RandevuTarihi" value="@Model.RandevuTarihi" />
    <input type="hidden" name="RandevuSaati" value="@Model.RandevuSaati" />
    <input type="hidden" name="Sure" value="@Model.Sure" />
    <input type="hidden" name="Ucret" value="@Model.Ucret" />

    <button type="submit" class="btn btn-success">Randevuyu Onayla</button>
    <a href="@Url.Action("TarihSaatSec", "Randevu", new { islemId = Model.Islem.Id, personelId = Model.Personel.Id })" class="btn btn-warning">Geri Dön</a>
    <a href="@Url.Action("UserDashboard", "User")" class="btn btn-danger">İptal Et</a>
</form>
