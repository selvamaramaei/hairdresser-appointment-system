@model IEnumerable<WebProje.Models.Personel>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "Personel Seçimi";
}

<div class="container" style="padding: 20px;">
    <h2 class="text-center" style="margin-bottom: 30px;">Personel Seçimi</h2>
    <p class="text-center">Seçilen işlem: <strong>@ViewBag.Islem.Ad</strong></p>

    <form method="post" action="@Url.Action("TarihSaatSec", "Randevu")" style="max-width: 600px; margin: 0 auto;">
        <input type="hidden" name="islemId" value="@ViewBag.Islem.Id" />

        <p class="text-center">Lütfen bir personel seçin:</p>
        <ul class="list-group">
            @foreach (var personel in Model)
            {
                <li class="list-group-item">
                    <input type="radio" name="personelId" value="@personel.Id" id="personel-@personel.Id" />
                    <label for="personel-@personel.Id">
                        @personel.Ad @personel.Soyad (@personel.Cinsiyet)
                    </label>
                </li>
            }
        </ul>

        <div style="text-align: center; margin-top: 20px;">
            <button type="submit" class="btn btn-primary">Devam Et</button>
        </div>
    </form>
</div>
