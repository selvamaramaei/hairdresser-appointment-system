@model WebProje.Models.AiOneri
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h2 class="text-center" style="margin-top: 40px; margin-bottom: 20px;">Saç Modeli Önerisi alın</h2>

<div class="d-flex justify-content-center">
    <form asp-action="ProcessHairStyle" asp-controller="AiOneri" method="post" enctype="multipart/form-data" style="width: 50%; padding: 20px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <div class="form-group">
            <label asp-for="Photo"></label>
            <input asp-for="Photo" type="file" class="form-control" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-top: 15px;">
            <label asp-for="HairStyle">Saç Modeli Seçin</label>
            <select asp-for="HairStyle" class="form-control">
                @foreach (var style in Model.HairStyles)
                {
                    <option value="@style.Key">@style.Value</option>
                }
            </select>
            <span asp-validation-for="HairStyle" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center" style="margin-top: 20px;">
            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
    </form>
</div>

@if (ViewBag.ResultImage != null)
{
    <div class="text-center" style="margin-top: 30px;">
        <h3>Yeni Saç Modeliniz:</h3>
        <img src="data:image/png;base64,@ViewBag.ResultImage" alt="Yeni Saç Modeli" class="img-fluid" style="max-width: 100%; height: auto; border: 1px solid #ddd; border-radius: 10px;" />
    </div>
}
else
{
    <p class="text-center" style="margin-top: 30px;">Henüz bir sonuç görüntülenmedi.</p>
}
